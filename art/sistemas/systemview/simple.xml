<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>  
<view name="system">


<carousel name="systemcarousel">
<defaultTransition>fade & slide</defaultTransition>
<zIndex>151</zIndex>	      
<type>horizontal</type>
<linearSmooth>true</linearSmooth>
<pos>0.027 -0.364</pos>
<size>0.946 1</size>
<logoScale>1.0</logoScale>
<logoSize>0.090 0.260</logoSize>
<color>00000000</color>
<maxLogoCount>9</maxLogoCount>
<logoRotation>16</logoRotation>
<logoRotationOrigin>3.26 0.5</logoRotationOrigin>
<logoAlignment>center</logoAlignment>       
</carousel>


<text name="logoText">
<fontSize>0.044</fontSize>
<fontPath>./art/sistemas/fuentes/Pixel LCD-7.ttf</fontPath>
<color>${baseColor}</color>
<glowColor>ffffff</glowColor>
<glowSize>1</glowSize>
<lineSpacing>1.0</lineSpacing>
</text>

<image name="logo">
<path>./art/sistemas/logosimples/${system.theme}.png</path>
<path>./art/sistemas/silverring Extras/${system.theme}.png</path>
<path>./art/sistemas/dvd/${system.theme}.png</path>
<linearSmooth>true</linearSmooth>

<storyboard event="deactivate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
<animation property="x" from="" to="0.047" begin="0" duration="0" autoreverse="false" begin="0" repeat="1"/> 
<animation property="y" from="" to="0.130" begin="0" duration="0" autoreverse="false" begin="0" repeat="1"/>
<animation property="rotation" from="0" to="360" begin="0" duration="500"/>
</storyboard>


<storyboard event="activate">
<animation property="scale" to="1.45" begin="0300" duration="0600" mode="easeOut" autoreverse="false" repeat="1"/>
<animation property="x" from="" to="0.047" begin="0" duration="0" autoreverse="false" begin="0" repeat="1"/> 
<animation property="y" from="" to="0.121" begin="0" duration="0" autoreverse="false" begin="0" repeat="1"/> 
<animation property="w" from="0.092" to="0.150" begin="1600" duration="300" autoreverse="true" repeat="3"/> 
<animation property="y" from="0.127" to="0.080" begin="1200" duration="300" autoreverse="true" repeat="3"/> 
<animation property="rotation" from="0" to="360" begin="12400" duration="500"/>
<animation property="rotation" from="0" to="-360" begin="24400" duration="500"/>
<animation property="rotation" from="0" to="360" begin="38400" duration="500"/>
</storyboard>
</image>


<text name="systemInfo">
<visible>true</visible>
<systemInfoDelay>300</systemInfoDelay>
<pos>0.090  0.767</pos>
<size>0.420 0.35</size>
<fontSize>0.023</fontSize>
<alignment>center</alignment>
<fontPath>./art/sistemas/fuentes/gemina.ttf</fontPath>
<backgroundColor>00000000</backgroundColor>
<color>ffffff</color>
<glowColor>ffffff00</glowColor>
<glowSize>0</glowSize>
<reflexion>0.0 0.0</reflexion>
<rotation>0</rotation> 
<zIndex>72</zIndex>
</text>

<sound name="bgsound">
<path>./art/sistemas/musica/${system.theme}.ogg</path>
<path>./art/sistemas/musica/${system.theme}.wav</path>
<path>./art/sistemas/musica/${system.theme}.mp3</path>
</sound>

<image name="logopausa,capaderecha,capaarriva,capaabajo" extra="true">
<visible>false</visible>
</image>

<image name="fondo1" extra="true">
<tile>false</tile>
<visible>true</visible>
<color>ffffff</color>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/fondos/simple.png</path>
<linearSmooth>true</linearSmooth>
<zIndex>43</zIndex>
</image> 


<video name="video" extra="true">
<visible>true</visible>
<path>{random}</path> 
<default>./art/GLICTH NO SIGNA.mp4</default> 
<rotation>0</rotation>  
<roundCorners>0</roundCorners>     
<pos>0.28430 0.5636</pos>     
<maxSize>0.5010 0.56700</maxSize>
<origin>0.5 0.5</origin>
<delay>0</delay>
<showSnapshotNoVideo>false</showSnapshotNoVideo>
<showSnapshotDelay>false</showSnapshotDelay>
<color>FFFFFF</color>
<zIndex>141</zIndex>
</video>

<image name="background3" extra="true">
<tile> false </tile>
<visible>true</visible>
<color>ffffff</color>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/wall/default.png</path>
<path>./art/sistemas/wall/${system.theme}.png</path>
<linearSmooth>true</linearSmooth>
<zIndex>40</zIndex>
<storyboard>
<animation property="scale" to="1.4" duration="101100" mode="easeOut" autoreverse="true" repeat="1"/>
<animation property="color" from="FA3505" to="FAE805" begin="100" duration="7300" autoreverse="true" mode="EaseOut"/>
</storyboard>
</image>

<image name="character" extra="true">
<maxSize>0.130 0.465</maxSize>
<pos>0.750 0.850</pos>
<origin>0.5 0.5</origin>
<path>./art/sistemas/character/default.png</path>
<path>./art/sistemas/character/${system.theme}.png</path>
<linearSmooth>true</linearSmooth>
<color>FFFFFFFF</color>
<glowColor>000000</glowColor>
<glowSize>2</glowSize>
<reflexion>0</reflexion>
<zIndex>292</zIndex>
<storyboard>
<animation property="scale" from="0.550" to="3.5" begin="" duration="0" mode="EaseOut"/>
<animation property="x" from="0.750" to="0.700" begin="500" duration="3900" autoreverse="true" repeat="1"/> 
<animation property="x" from="0.750" to="0.700" begin="13800" duration="3900" autoreverse="true" repeat="1"/> 
<animation property="x" from="0.750" to="0.700" begin="26400" duration="3900" autoreverse="true" repeat="1"/> 
<animation property="x" from="0.750" to="0.700" begin="39400" duration="3900" autoreverse="true" repeat="1"/> 
<animation property="scale" from="" to="3.7" begin="46400" duration="6000" mode="EaseOut"/>
</storyboard>
</image>


<image name="personaje,personaje2,personaje3" extra="true">
<visible>false</visible>
</image>


<helpsystem name="help">
<visible>true</visible>
<fontSize>0.020</fontSize>
<fontPath>./art/sistemas/dash_dot_square-7.ttf</fontPath>
<textColor>ffffff</textColor>
<iconColor>ffffff90</iconColor>
<fontSize>0.020</fontSize>
<pos>0.13 0.9660</pos>
<zIndex>190</zIndex>
</helpsystem>	
      

<text name="fullName" extra="true">
<visible>false</visible>
<text>${system.fullName}</text>
<alignment>left</alignment>
<verticalAlignment>top</verticalAlignment>
<fontPath>./art/sistemas/fuentes/gemina.ttf</fontPath>
<fontSize>0.026</fontSize>
<pos>0.055 0.066</pos>
<size>0.582 0.02</size>
<color>C0C0C0</color>      
<zIndex>299</zIndex>
<color>ffffff</color>
<glowColor>00000040</glowColor>
<glowSize>2</glowSize>
<fontSize tinyScreen="true">0.065</fontSize>
<glowSize tinyScreen="true">1</glowSize>
<storyboard repeat="1">
<animation property="x" from="0.057" to="0.047" begin="100" duration="90" autoreverse="true" mode="easeOut"/>
