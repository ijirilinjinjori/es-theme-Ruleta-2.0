<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>  
<view name="system">


<carousel name="systemcarousel">
<defaultTransition>fade & slide</defaultTransition>
<zIndex>53</zIndex>	      
<type>horizontal</type>
<linearSmooth>true</linearSmooth>
<pos>0. -0.385</pos>
<size>1 1</size>
<logoScale>1.05</logoScale>
<logoSize>0.160 0.260</logoSize>
<color>ffffff00</color>
<maxLogoCount>5</maxLogoCount>
<logoRotation>16</logoRotation>
<logoRotationOrigin>3.26 0.5</logoRotationOrigin>
<logoAlignment>center</logoAlignment>       
</carousel>

<text name="logoText">
<fontSize>0.044</fontSize>
<fontPath>./art/sistemas/fuentes/Pixel LCD-7.ttf</fontPath>
<color>${baseColor}</color>
<glowColor>ffffff</glowColor>
<glowSize>1</glowSize>
<lineSpacing>1.0</lineSpacing>
</text>

<image name="logo">
<path>./art/sistemas/silverring/${system.theme}.png</path>
<path>./art/sistemas/silverring Extras/${system.theme}.png</path>
<path>./art/sistemas/dvd/${system.theme}.png</path>
</image>



<image name="logo">
<linearSmooth>true</linearSmooth>
<storyboard event="activate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<storyboard event="deactivate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<storyboard event="activate">
<animation property="scale" to="1.4" begin="0300" duration="0600" mode="easeOut" autoreverse="false" repeat="1"/>
<animation property="rotation" from="0" to="360" begin="0" duration="700" autoreverse="false" />
<animation property="y"  to="-0.05" begin="900" duration="500" autoreverse="true" mode="easeOut" repeat="3"/> 
</storyboard>
</image>


<text name="systemInfo">
<visible>true</visible>
<systemInfoDelay>300</systemInfoDelay>
<pos>0.285  0.580</pos>
<size>0.420 0.35</size>
<fontSize>0.023</fontSize>
<fontPath>./art/sistemas/fuentes/Pixel LCD-7.ttf</fontPath>
<backgroundColor>00000000</backgroundColor>
<color>ffffff</color>
<glowColor>000000</glowColor>
<glowSize>1</glowSize>
<reflexion>0.3 0.0</reflexion>
<rotation>0</rotation> 
<zIndex>90</zIndex>
<storyboard>
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
<animation property="y" from="0.580" to="0.560" begin="300" duration="200" autoreverse="true" mode="easeOut" repeat="3"/> 
</storyboard>
</text>

<sound name="bgsound">
